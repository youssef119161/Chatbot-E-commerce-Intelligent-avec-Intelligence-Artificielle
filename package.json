{
  "name": "chatbot-ecommerce-project",
  "version": "1.0.0",
  "description": "Projet universitaire - Chatbot E-commerce avec FastAPI et Angular",
  "scripts": {
    "install-all": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
    "start-backend": "cd backend && uvicorn main:app --reload",
    "start-frontend": "cd frontend && ng serve",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "test-api": "cd backend && python -m pytest",
    "build-frontend": "cd frontend && ng build",
    "lint-frontend": "cd frontend && ng lint"
  },
  "keywords": [
    "chatbot",
    "ecommerce",
    "fastapi",
    "angular",
    "ai",
    "university-project"
  ],
  "author": "Ã‰tudiant Universitaire",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.8.0"
  }
}